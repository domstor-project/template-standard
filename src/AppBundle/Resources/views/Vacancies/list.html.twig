{% extends "AppBundle::internal_pages.html.twig" %}

{% block title %}{{ parent() }}. Вакансии{% endblock %}

{% block breadcrumbs %}
    <a href="{{ url('app_home_index') }}">Главная</a> / Вакансии
{% endblock %}

{% block content %}
    <h1>Вакансии</h1>
    <div class="vacancy_inners">
        {% for row in pagination %}
            <div class="vacancy">
                <h4>{{ row.title }}</h4>
                <p>{{ row.place }}</p>
                <p><strong>{{ row.salary|raw}}</strong></p>
                <p><strong>{{ row.phone }}</strong></p>
                <a href="{{ path('app_vacancies_show', {'vacancy': row.id}) }}" title="Перейти на страницу вакансии"></a>
            </div>            
        {% endfor %}
    </div>
    {{ knp_pagination_render(pagination) }}
{% endblock %}
