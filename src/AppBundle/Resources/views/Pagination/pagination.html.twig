<div class="pagination">
    {% if pageCount > 1 %}
        <p>
            {#{% if previous is defined %}
                <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;&nbsp;Предыдущая</a>
            {% else %}
                <span>&laquo;&nbsp;Предыдущая</span>
            {% endif %}#}

            {% if startPage > 1 %}
                <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
                {% if startPage == 3 %}
                    <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                {% elseif startPage != 2 %}
                    <span class="disabled">&hellip;</span>
                {% endif %}
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                {% else %}
                    <span class="cur">{{ page }}</span>
                {% endif %}

            {% endfor %}

            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                        <span class="disabled">&hellip;</span>
                    {% else %}
                        <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                    {% endif %}
                {% endif %}
                <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
        {% endif %}

        {#{% if next is defined %}
            <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">Следующая&nbsp;&raquo;</a>
        {% else %}
            <span class="disabled">Следующая&nbsp;&raquo;</span>
        {% endif %}#}
    </p>
{% endif %}
</div>
